									</span>
									<span class="input-group-btn visible-xs-inline">
										<button type="submit" class="btn btn-default collapsed" data-toggle="collapse" data-target="#search">Поиск</button>
									</span>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</nav>
	</header>
	{% if page_id is empty %}
		{% page %}
	{% else %}
		<div id="head-image" style="background-image: url({{ ('assets/images/head/'~head_image)|theme }});"></div>
		<div class="container">
			<div class="row">
				{% set page = staticPage.page %}
				{% if page %}
					{% set parent = page.parent %}
					<nav class="col-xs-12">
						<ul class="breadcrumb">
							<li><a href="{{ '/'|app }}">Главная</a></li>
							{% if parent %}
								{% partial 'static-page-breadcrumb' page=parent %}
							{% endif %}
							<li class="active">{{ staticPage.title }}</li>
						</ul>
					</nav>
				{% else %}
					{% placeholder breadcrumb type="html" title="Хлебные крошки" %}
				{% endif %}
				<main id="{{ page_id }}" class="col-xs-12 col-md-9">
					{% page %}
				</main>
				<aside id="aside" class="col-xs-12 col-md-3">
					{% if page %}
						{% set toppage = (parent) ? parent : page  %}
						{% set subpages = toppage.children  %}
						{% if subpages %}
							<nav id="sub-pages" class="navbar">
								<ul class="nav nav-pills nav-stacked">
									<li{{ (toppage.url == page.url) ? ' class="active"' : '' }}><a href="{{ toppage.url|app }}">{{ toppage.title }}</a></li>
									{% for subpage in subpages %}
										<li{{ (subpage.url == page.url) ? ' class="active"' : '' }}><a href="{{ subpage.url|app }}">{{ subpage.title }}</a></li>
									{% endfor %}
								</ul>
							</nav>
						{% endif %}
					{% endif %}
					{% placeholder aside type="html" title="Сайдбар" %}
				</aside>
			</div>
		</div>
	{% endif %}
