<!DOCTYPE html>
{% spaceless %}
<html lang="ru">
	<head>
		<meta charset="utf-8">
		<title>{% placeholder title default type="text" title="Заголовок страницы" %}{{ this.page.title }}{% endplaceholder %}</title>
		<meta name="robots" content="{% placeholder meta_robots default type="text" title="Мата-правила" %}{{ this.page.robot_index ? this.page.robot_index : 'index' }},{{ this.page.robot_follow ? this.page.robot_follow : 'follow' }}{% endplaceholder %}">
		<meta name="revisit" content="14">
		<meta name="title" content="{% placeholder meta_title default type="text" title="Мета-заголовок" %}{{ this.page.meta_title }}{% endplaceholder %}">
		<meta name="description" content="{% placeholder meta_description default type="text" title="Мета-описание" %}{{ this.page.meta_description }}{% endplaceholder %}">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="application-name" content="ООО «Термоформ»">
		<meta name="msapplication-tooltip" content="Каталог продукции, заказ on-line">
		<meta name="msapplication-config" content="{{ 'assets/IEconfig.xml'|theme }}">
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
		<link rel="apple-touch-icon-precomposed" sizes="57x57" href="{{ 'assets/images/apple-touch-icon-57x57.png'|theme }}">
		<link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ 'assets/images/apple-touch-icon-114x114.png'|theme }}">
		<link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ 'assets/images/apple-touch-icon-72x72.png'|theme }}">
		<link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ 'assets/images/apple-touch-icon-144x144.png'|theme }}">
		<link rel="apple-touch-icon-precomposed" sizes="60x60" href="{{ 'assets/images/apple-touch-icon-60x60.png'|theme }}">
		<link rel="apple-touch-icon-precomposed" sizes="120x120" href="{{ 'assets/images/apple-touch-icon-120x120.png'|theme }}">
		<link rel="apple-touch-icon-precomposed" sizes="76x76" href="{{ 'assets/images/apple-touch-icon-76x76.png'|theme }}">
		<link rel="apple-touch-icon-precomposed" sizes="152x152" href="{{ 'assets/images/apple-touch-icon-152x152.png'|theme }}">
		<link rel="shortcut icon" href="/favicon.ico">
		<link rel="icon" type="image/png" href="{{ 'assets/images/favicon-196x196.png'|theme }}" sizes="196x196">
		<link rel="icon" type="image/png" href="{{ 'assets/images/favicon-96x96.png'|theme }}" sizes="96x96">
		<link rel="icon" type="image/png" href="{{ 'assets/images/favicon-32x32.png'|theme }}" sizes="32x32">
		<link rel="icon" type="image/png" href="{{ 'assets/images/favicon-16x16.png'|theme }}" sizes="16x16">
		<link rel="icon" type="image/png" href="{{ 'assets/images/favicon-128.png'|theme }}" sizes="128x128">
		<link href="https://fonts.googleapis.com/css?family=Cuprum:400,700&subset=latin,cyrillic" rel="stylesheet">
		<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/4.0.1/ekko-lightbox.min.css" rel="stylesheet">
		<link rel="alternate" type="application/rss+xml" title="Новости ООО «Термоформ»" href="/feed">
		<link rel="alternate" type="application/rss+xml" title="Новое в личном кабинете" href="/cabinet/feed">
		{% styles %}
		{% placeholder styles type="html" title="Теги стилей" %}
		<link href="{{ 'assets/style.min.css'|theme }}" rel="stylesheet">
	</head>
	<body>
		<div class="container">
			<div class="navbar navbar-default" role="navigation">
				<div class="container-fluid">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
							<span class="sr-only">Переключить меню</span>
						</button>
						<a class="navbar-brand" href="/">Бренд</a>
					</div>
					<div class="navbar-collapse collapse">
						{% partial 'menu-items' items=topMenuLeft.menuItems class='nav navbar-nav' %}
						{% partial 'menu-items' items=topMenuRight.menuItems class='nav navbar-nav navbar-right' %}
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-sm-8" id="{{ page_id }}">
					{% page %}
				</div>
				<div class="col-sm-3 col-sm-offset-1">
					<div class="sidebar">
						<h4>Категории блога</h4>
						{% partial 'menu-items' items=blogCategoriesMenu.menuItems class='nav nav-pills nav-stacked' %}
					</div>
				</div>
			</div>
		</div>
		<script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-hover-dropdown/2.2.1/bootstrap-hover-dropdown.min.js"></script>
		{% scripts %}
		{% framework extras %}
		{% placeholder scripts type="html" title="Теги скриптов" %}
		<script src="{{ 'assets/script.min.js'|theme }}"></script>
	</body>
</html>
{% endspaceless %}
